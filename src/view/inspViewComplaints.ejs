<!DOCTYPE html>
<html>
<head>
  <title>Inspector | Complaints</title>
  <link rel="stylesheet" href="/css/inspViewComplaints.css">
</head>

<body>
    <%- include('partials/header2') %>
<div class="wrapper">
  <h1>📝 Complaints Dashboard</h1>

  <h2>Pending Complaints</h2>
  <% if (pending.length === 0) { %>
    <p>No pending complaints.</p>
  <% } else { %>
    <ul>
      <% pending.forEach(c => { %>
        <li>
          <strong><%= c.subject %></strong><br>
          Submitted by: <%= c.user_name %> <br>
          Submitted on: <%= new Date(c.created_at).toLocaleString() %> <br>
          <a href="/inspector/complaints/<%= c.id %>">View More</a>
        </li>
      <% }) %>
    </ul>
  <% } %>

  <h2>Resolved Complaints</h2>
  <% if (resolved.length === 0) { %>
    <p>No resolved complaints.</p>
  <% } else { %>
    <ul>
      <% resolved.forEach(c => { %>
        <li>
          <strong><%= c.subject %></strong><br>
          Submitted by: <%= c.user_name %><br>
          Resolved on: <%= new Date(c.updated_at).toLocaleString() %> <br>
          <a href="/inspector/complaints/<%= c.id %>">View More</a>
        </li>
      <% }) %>
    </ul>
  <% } %>
</div>
</body>
</html>
