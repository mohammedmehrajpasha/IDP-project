  </style>
</head>
<body>
  

  <!-- React Chatbot Script -->
  <script type="module" src="/chatbot/assets/index-CnMZe5gk.js"></script>

  <!-- Optional chatbot root mount (if needed) -->
  <div id="root"></div>

  <!-- üü© Ask and Chatbot Info Section -->
  <div class="top-section">
    <div class="ask-box">
      <h2>Ask a Question</h2>
      <p>Need help from alumni or students? Post your question and get answers.</p>
      <a href="/ask-question">Ask Now</a>
    </div>

    <div class="info-box chatbot-highlight" id="chatbot-opener">
      <h2>EduAudit Assistant Chatbot</h2>
      <p>Get instant guidance and answers using our assistant chatbot.</p>
      <p style="font-size: 0.9rem; color: #555;">Click this box to open the chatbot in the bottom left corner.</p>
    </div>
  </div>

  <!-- üéì Dual Blog Sections -->
  <div class="blog-sections">
    <!-- Alumni Blogs Section -->
    <div class="blog-section alumni-section">
      <h2>Alumni Guidance</h2>
      <% if (alumniBlogs && alumniBlogs.length > 0) { %>
        <% alumniBlogs.forEach(function(blog) { %>
          <div class="post">
            <h3 class="post-title"><%= blog.title %></h3>
            <p class="post-description"><%= blog.description.slice(0, 150) %>...</p>
            <a class="read-more" href="/blog/<%= blog.id %>">Read More</a>
          </div>
        <% }) %>
      <% } else { %>
        <p>No alumni guidance available at the moment.</p>
      <% } %>
    </div>

    <!-- Student Blogs Section -->
    <div class="blog-section student-section">
      <h2>Student Blogs</h2>
      <% if (studentBlogs && studentBlogs.length > 0) { %>
        <% studentBlogs.forEach(function(blog) { %>
          <div class="post">
            <h3 class="post-title"><%= blog.title %></h3>
            <p class="post-description"><%= blog.description.slice(0, 150) %>...</p>
            <a class="read-more" href="/student-blog/<%= blog.id %>">Read More</a>
          </div>
        <% }) %>
      <% } else { %>
        <p>No student experiences available at the moment.</p>
      <% } %>
    </div>
  </div>

  <!-- üí¨ JS to trigger chatbot on info-box click -->
  <script>
    document.getElementById("chatbot-opener").addEventListener("click", function () {
      const chatbotToggle = document.querySelector("#root button, .chatbot-toggle, .chatbot-icon");
      if (chatbotToggle) chatbotToggle.click();
    });
  </script>
  