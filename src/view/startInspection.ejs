<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Start Inspection – FSSAI Inspector Hub</title>
  <link rel="stylesheet" href="/css/home1.css" />
  <link rel="stylesheet" href="/css/startInspection.css" />
</head>
<body>
<%- include('partials/header') %>

<section class="features">
  <div class="container form-container">
    <h2>🧾 Inspection Form</h2>

    <!-- Restaurant Details -->
    <div class="restaurant-info">
      <p><strong>🍽️ Name:</strong> <%= restaurant.name %></p>
      <p><strong>📄 License:</strong> <%= restaurant.license_number %></p>
      <p><strong>📞 Phone:</strong> <%= restaurant.phone %></p>
      <p><strong>🏡 Address:</strong> <%= restaurant.address %></p>
    </div>

    <!-- Inspection Form -->
    <form action="/inspections/start/<%= inspection.id %>" method="POST">
      <% categories.forEach(category => { %>
        <div class="inspection-category">
          <h3><%= category.name %></h3>
          <% category.items.forEach(item => { %>
            <div class="inspection-item">
              <label>
                <input type="checkbox" name="<%= category.id %>[<%= item.id %>]" value="true" />
                <span><%= item.name %></span>
              </label>
            </div>
            <!-- <div class="inspection-item">
  <label class="custom-checkbox">
    <input type="checkbox" name="<%= category.id %>[<%= item.id %>]" />
    <span class="checkbox-text"><%= item.name %></span>
  </label>
</div> -->
          <% }) %>
        </div>
      <% }) %>

      <button type="submit" class="btn">Submit Inspection</button>
    </form>
  </div>
</section>

<%- include('partials/footer') %>
</body>
</html>
