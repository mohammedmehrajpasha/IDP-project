<body>

<%- include('partials/header1') %>

<section class="features">
  <div class="container">
    
    <div class="centered">
      <div class="features-heading">
        <h2>Edit Inspector</h2>
        <p>Update inspector details below.</p>
      </div>
    </div>

    <form action="/admin/inspectors/edit/<%= inspector.id %>" method="POST" class="add-form">
      <input type="text" name="name" value="<%= inspector.name %>" required>
      <input type="email" name="email" value="<%= inspector.email %>" required>
      <input type="text" name="phone" value="<%= inspector.phone %>" required>
      <input type="text" name="region" value="<%= inspector.region %>" required>
      <button type="submit" class="btn">Update</button>
    </form>

    <div class="centered" style="margin-top: 20px;">
      <a href="/admin/inspectors" class="btn btn-outline">Back to Inspector List</a>
    </div>
    
  </div>
</section>


