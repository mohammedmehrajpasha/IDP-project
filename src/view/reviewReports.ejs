<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Review Reports – Inspector Hub</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/manageReports.css" />
  <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body>
<%- include('partials/header1') %>

<div class="form-wrapper">
  <div class="heading-block">
    <h1>Review Inspection Reports</h1>
    <p>Approve or reject completed inspection reports submitted by inspectors.</p>
  </div>

  <% if (inspections.length === 0) { %>
    <p class="text-muted">No completed inspections found.</p>
  <% } else { %>
    <div class="card">
      <table>
        <thead>
          <tr>
            <th>Restaurant</th>
            <th>License</th>
            <th>Inspector</th>
            <th>Date</th>
            <th>Score</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% inspections.forEach(r => { %>
            <tr>
              <td><%= r.restaurant_name %></td>
              <td><%= r.license_number %></td>
              <td><%= r.inspector_name %></td>
              <td><%= new Date(r.inspection_date).toLocaleDateString() %></td>
              <td>
                <span class="score <% if (r.hygiene_score >= 4) { %>green<% } else if (r.hygiene_score >= 3) { %>yellow<% } else { %>red<% } %>">
                  <%= r.hygiene_score %> / 5
                </span>
              </td>
              <td>
                <span class="badge <%= r.status === 'approved' ? 'green' : r.status === 'rejected' ? 'red' : 'gray' %>">
                  <%= r.status ? r.status.charAt(0).toUpperCase() + r.status.slice(1) : 'N/A' %>
                </span>
              </td>
              <td class="action-btns">
                <a href="/admin/reports/<%= r.report_id %>" class="icon-btn" title="View Full Report">
                  <i data-lucide="eye"></i>
                </a>
                <% if (r.status === 'pending') { %>
                  <form action="/admin/reports/approve/<%= r.report_id %>" method="POST" style="display:inline;">
                    <button class="icon-btn green" title="Approve">
                      <i data-lucide="check"></i>
                    </button>
                  </form>
                  <form action="/admin/reports/reject/<%= r.report_id %>" method="POST" style="display:inline;">
                    <button class="icon-btn red" title="Reject">
                      <i data-lucide="x"></i>
                    </button>
                  </form>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } %>

  <div class="centered" style="margin-top: 20px;">
    <a href="/admin/dashboard" class="btn btn-outline">← Back to Dashboard</a>
  </div>
</div>

<%- include('partials/footer') %>

<script>
  lucide.createIcons();
</script>
</body>
</html>
