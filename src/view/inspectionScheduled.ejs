<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Scheduled Inspections – FSSAI Inspector Hub</title>
  <link rel="stylesheet" href="/css/home1.css" />
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 30px;
    }
    th, td {
      border: 1px solid #ccc;
      padding: 12px;
      text-align: left;
    }
    th {
      background-color: #f2f2f2;
    }
    tr:hover {
      background-color: #f9f9f9;
    }
    .btn-view {
      background-color: #007bff;
      color: #ffffff;
      padding: 6px 12px;
      text-decoration: none;
      border-radius: 5px;
    }
    .btn-view:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <%- include('partials/header') %>

  <section class="features">
    <div class="container">
      <h2>📅 Your Scheduled Inspections</h2>

      <% if (scheduledInspections.length === 0) { %>
        <p>No scheduled inspections at this time.</p>
      <% } else { %>
        <table>
          <thead>
            <tr>
              <th>🍽️ Restaurant Name</th>
              <th>📄 License Number</th>
              <th>📍 Phone Number</th>
              <th>🏡 Address</th>
              <th>🗓 Last Inspection</th>
              <th>🚀 Action</th>
            </tr>
          </thead>
          <tbody>
            <% scheduledInspections.forEach(function(inspection){ %>
              <tr>
                <td><%= inspection.name %></td>
                <td><%= inspection.license_number %></td>
                <td><%= inspection.phone %></td>
                <td><%= inspection.address %></td>
                <td>
                   <% if (inspection.last_inspection) { %>
                     <%= new Date(inspection.last_inspection).toLocaleDateString() %>
                   <% } else { %>
                     ⏳ Not Inspected
                   <% } %>
                 </td>
                 <td>
                   <a
                      href="/inspections/start/<%= inspection.id %>"
                      class="btn-view">
                      Start Inspection
                   </a>
                 </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } %>
    </div>
  </section>

  <%- include('partials/footer') %>
</body>
</html>
